<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#eee"
    android:orientation="vertical">

    <include layout="@layout/layout_base_common_title"></include>

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_dingdanhao"
                    android:text="订单号"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:id="@+id/ed_dingdanhao"
                    android:hint="请填写订单号"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_shape"
                    android:layout_width="180dp"
                    android:layout_height="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_time"
                    android:text="订单生成时间"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ed_time"
                    android:hint="请选择时间"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_shape"
                    android:layout_width="180dp"
                    android:layout_height="30dp" />
                <ImageView
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/img_xiaxiantou"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name"
                    android:text="联系人姓名"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:id="@+id/ed_name"
                    android:hint="请填写联系人姓名"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_shape"
                    android:layout_width="180dp"
                    android:layout_height="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_phone"
                    android:text="联系人电话"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:textSize="14sp"
                    android:inputType="number"
                    android:id="@+id/ed_phone"
                    android:hint="请填写联系人电话"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_shape"
                    android:layout_width="180dp"
                    android:layout_height="30dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_type"
                    android:text="订单类型"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:src="@mipmap/img_xingxing"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/tv_type"
                    android:layout_alignTop="@+id/ed_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/ed_type"
                    android:hint="物流发货单"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/search_shape"
                    android:layout_width="180dp"
                    android:layout_height="30dp" />
            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_gravity="end"
        android:text="以上4个搜索条件，填写一个即可。"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn_search"
        android:paddingLeft="50dp"
        android:drawablePadding="-40dp"
        android:text="搜索"
        android:textColor="#ffffff"
        android:textSize="25sp"
        android:drawableLeft="@mipmap/img_search1"
        android:background="@drawable/buttn_shape"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_width="200dp"
        android:layout_height="50dp" />



</LinearLayout>

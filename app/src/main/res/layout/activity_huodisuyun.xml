                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="5dp"
                            android:background="@null"
                            android:hint="必填"
                            android:textColorHint="#c31023" />
                    </RelativeLayout>


<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    android:background="#ff4e4e">

    <LinearLayout
        android:background="@mipmap/img_huodikaifapiao_bg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/img_huodiyuandian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginLeft="5dp"
                    android:textColor="#000000"
                    android:id="@+id/tv_conent1"
                    android:text="的金发放假拉风"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/linear1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:src="@mipmap/img_huodiyuandian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:textColor="#000000"
                        android:id="@+id/tv_conent2"
                        android:text="的金发放假拉放假快乐是放假了萨芬家乐福"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>

            </LinearLayout>
            <View
                android:id="@+id/view"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/linear2"
                android:background="#eee"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_below="@+id/view"
                android:id="@+id/tv_time"
                android:layout_marginTop="10dp"
                android:text="2000/00/00 00/00/00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center"
                android:background="@drawable/kaifapiao_jine_shape"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/tv_time"
                android:id="@+id/tv_money"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:text="¥200元"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="35dp" />

            <CheckBox
                android:layout_marginLeft="5dp"
                android:id="@+id/img_xuanshang1"
                android:button="@mipmap/img_huodixuanze"
                android:layout_below="@+id/tv_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />




        </RelativeLayout>

    </LinearLayout>






</RelativeLayout>
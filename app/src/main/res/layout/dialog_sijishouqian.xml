<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff"
    android:gravity="center_horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/img1"
            android:src="@mipmap/img_sijishouqian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_success"
            android:textColor="#343434"
            android:text="您有一笔收款到账"
            android:layout_below="@+id/img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView

            android:id="@+id/tv_chakan"
            android:textColor="#ffb712"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_success"
            android:layout_centerHorizontal="true"
            android:text="前往我的钱包查看"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:layout_alignLeft="@+id/tv_chakan"
            android:layout_alignRight="@+id/tv_chakan"
            android:layout_below="@+id/tv_chakan"
            android:background="#ffb712"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>


    </RelativeLayout>

</LinearLayout>
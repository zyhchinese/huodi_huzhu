<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_margin="20dp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_width="300dp"
        android:layout_height="200dp">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb1"
                android:button="@null"
                android:drawablePadding="20dp"
                android:drawableLeft="@mipmap/img_huodizhifuxuanze"
                android:drawableRight="@mipmap/wdqb_md"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/jifenpay"
                android:text="积分支付"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:layout_alignTop="@+id/rb1"
                android:layout_toRightOf="@+id/rb1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_yue"
                android:layout_alignLeft="@+id/jifenpay"
                android:layout_below="@+id/jifenpay"
                android:text="123456789"
                android:layout_marginTop="5dp"
                android:textColor="#ff0000"
                android:textSize="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>




    </RelativeLayout>



</RelativeLayout>
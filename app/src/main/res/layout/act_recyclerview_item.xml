<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="35dp"
    android:layout_marginBottom="25dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear"
        android:background="#c30e21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_shangpin"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="1dp"
            android:src="@mipmap/icon_defult_a" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_name"
        android:text="麦巴特通用型迷你智能手机支架"
        android:layout_marginLeft="15dp"
        android:textSize="10sp"
        android:layout_toRightOf="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:lines="1"
        android:id="@+id/tv_name1"
        android:textSize="10sp"
        android:textColor="#a6a4a4"
        android:text="仅适用2016款及2017款"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_text"
        android:text="颜色：  "
        android:textSize="10sp"
        android:layout_below="@+id/tv_name1"
        android:layout_alignLeft="@+id/tv_name1"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="10sp"
        android:id="@+id/tv_color"
        android:text="黑色"
        android:layout_toRightOf="@+id/tv_text"
        android:layout_alignTop="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="10sp"
        android:id="@+id/tv_type"
        android:text="适用车型：  "
        android:layout_toRightOf="@+id/tv_color"
        android:layout_alignTop="@+id/tv_color"
        android:layout_marginLeft="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="10sp"
        android:id="@+id/tv_type1"
        android:text="通用"
        android:layout_toRightOf="@+id/tv_type"
        android:layout_alignTop="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_money"
        android:text="¥ "
        android:layout_alignBottom="@+id/linear"
        android:layout_toRightOf="@+id/linear"
        android:layout_marginLeft="15dp"
        android:textColor="#c30e21"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_money1"
        android:text="276"
        android:textColor="#c30e21"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tv_money"
        android:layout_alignTop="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_price"
        android:text="800"
        android:layout_alignBottom="@+id/linear"
        android:layout_toRightOf="@+id/tv_money1"
        android:layout_marginLeft="10dp"
        android:textColor="#c30e21"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:visibility="gone"
        android:layout_marginLeft="2dp"
        android:id="@+id/tv_price1"
        android:text="积分"
        android:textColor="#c30e21"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/tv_price"
        android:layout_alignTop="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="10sp"
        android:id="@+id/tv_number"
        android:text="1"
        android:layout_marginRight="3dp"
        android:layout_alignBottom="@+id/tv_money1"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="10sp"
        android:text="×"
        android:layout_toLeftOf="@+id/tv_number"
        android:layout_alignBottom="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</RelativeLayout>
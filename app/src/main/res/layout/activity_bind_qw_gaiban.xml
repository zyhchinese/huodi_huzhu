<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/layout_base_common_title"></include>

    <ScrollView
        android:layout_weight="9"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_anquanzhongxin_banner"
                android:src="@mipmap/img_huodianquanzhongxinbanner"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="180dp" />

            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/img_huodiqqhao_tubiao"/>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:inputType="number"
                        android:id="@+id/et_qq"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="#686565"
                        android:textSize="15sp"
                        android:textColor="#686565"
                        android:background="@null"
                        android:hint="请输入您的QQ号码"/>
                </LinearLayout>

                <!--<View-->
                    <!--style="@style/h_line"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:layout_marginBottom="20dp"></View>-->

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@mipmap/img_huodibangdingqqweixin_tubiao"/>
                    <EditText
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:id="@+id/et_wx"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="#686565"
                        android:textSize="15sp"
                        android:textColor="#686565"
                        android:paddingRight="10dp"
                        android:background="@null"
                        android:hint="请输入您的微信号码"/>

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_weight="1"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ff4f4f"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="完成"
        android:id="@+id/tv_confirm"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/layout_carrental"></include>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:background="#EEEEEE"
        android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="15dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginRight="18dp"
                            android:layout_marginLeft="18dp"
                            >

                            <ImageView
                                android:layout_width="13dp"
                                android:id="@+id/qiu1"
                                android:layout_height="13dp"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:src="@mipmap/clzl_sjz3" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:id="@+id/xian1"
                                android:layout_toRightOf="@id/qiu1"
                                android:layout_centerVertical="true"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/clzl_sx" />

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_centerVertical="true"
                                android:id="@+id/qiu2"
                                android:layout_toRightOf="@id/xian1"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@mipmap/clzl_sjz1" />

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:id="@+id/xian2"
                                android:layout_toRightOf="@id/qiu2"
                                android:layout_centerVertical="true"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@mipmap/clzl_xx" />

                            <ImageView
                                android:layout_width="13dp"
                                android:layout_height="13dp"
                                android:id="@+id/qiu3"
                                android:layout_centerVertical="true"
                                android:layout_toRightOf="@id/xian2"
                                android:layout_gravity="center"
                                android:layout_margin="3dp"
                                android:src="@mipmap/clzl_sjz2" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="用车需求"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/qiu1"
                                android:layout_centerVertical="true"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/clzl_xx" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联系方式"
                                />
                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/qiu1"
                                android:layout_centerVertical="true"
                                android:visibility="invisible"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@mipmap/clzl_xx" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="提交需求"
                                />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#eeeeee" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="18dp"
                        android:layout_marginLeft="11dp"
                        android:layout_marginTop="18dp"
                        android:layout_toRightOf="@id/qu"
                        android:text="企业名称"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/qymc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="11dp"
                        android:background="@null"
                        android:hint="请填写企业名称"
                        android:textColorHint="#888888"
                        android:textSize="14sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#EEEEEE"
                    android:orientation="vertical">

                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"></ListView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="@drawable/bg_charge_root"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/xing1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/clzl_xing" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/xing1"
                                android:text="联系人姓名"
                                android:textColor="#222222"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/lxrname"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@null"
                                android:hint="请填写联系人姓名"
                                android:textColorHint="#888888"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eeeeee" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/xing2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/clzl_xing" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/xing2"
                                android:text="联系人手机"
                                android:textColor="#222222"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/sjh"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@null"
                                android:hint="请填写联系人手机"
                                android:inputType="number"
                                android:textColorHint="#888888"
                                android:textSize="14sp" />
                        </RelativeLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#eeeeee" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:background="#FFFFFF"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/xing3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginRight="8dp"
                                android:src="@mipmap/clzl_xing"
                                android:visibility="invisible" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/xing3"
                                android:text="电子邮箱"
                                android:textColor="#222222"
                                android:textSize="14sp" />

                            <EditText
                                android:id="@+id/yx"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@null"
                                android:hint="请填写电子邮箱"
                                android:textColorHint="#888888"
                                android:textSize="14sp" />
                        </RelativeLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="15dp"
                            android:text="带‘*’的选项为必填项"
                            android:textColor="#888888"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

    </ScrollView>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#c30e21"
            android:gravity="center"
            android:padding="14dp"
            android:text="提交"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
</LinearLayout>
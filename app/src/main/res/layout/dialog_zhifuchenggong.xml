<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@mipmap/img_qiangdanchenggong_bg"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="14sp"
            android:id="@+id/tv_success"
            android:textColor="#343434"
            android:text="支付成功"
            android:layout_below="@+id/img1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
        <TextView

            android:id="@+id/tv_chakan"
            android:textColor="#c31023"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_success"
            android:layout_centerHorizontal="true"
            android:text="点击查看订单"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:layout_alignLeft="@+id/tv_chakan"
            android:layout_alignRight="@+id/tv_chakan"
            android:layout_below="@+id/tv_chakan"
            android:background="#c31023"
            android:layout_width="wrap_content"
            android:layout_height="1dp"/>


    </RelativeLayout>

</LinearLayout>
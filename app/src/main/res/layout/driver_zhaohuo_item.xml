<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eee">
    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="#ffffff"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_tu"
                        android:src="@mipmap/img_siji"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_tu"
                        android:text="张三"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/view"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/img_call"
                        android:background="#eee"
                        android:layout_width="1dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/img_dadianhua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_toLeftOf="@+id/view"
                        android:layout_marginRight="10dp"
                        android:text="2000/00/00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignBottom="@+id/tv_address"
                        android:id="@+id/img_dizhi_t"
                        android:src="@mipmap/img_dizhitubiao_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_dizhi_shu"
                        android:layout_marginLeft="6dp"
                        android:layout_below="@+id/img_dizhi_t"
                        android:src="@mipmap/img_dizhishugang"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <ImageView
                        android:layout_alignTop="@+id/tv_address1"
                        android:layout_below="@+id/img_dizhi_shu"
                        android:src="@mipmap/img_dizhitubiao_f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_dizhi_t"
                        android:text="山东省济南市高新区汉峪金谷"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_address1"
                        android:layout_below="@+id/tv_address"
                        android:layout_alignLeft="@+id/tv_address"
                        android:layout_marginTop="20dp"
                        android:text="山东省济南市麦巴特新能源有限公司"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="车型"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/tv_car_type"
                            android:text="小货车"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>
                    <View
                        android:layout_marginLeft="10dp"
                        android:id="@+id/view1"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/img_call"
                        android:background="#eee"
                        android:layout_width="1dp"
                        android:layout_height="20dp"/>

                    <RelativeLayout
                        android:layout_weight="5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="酬劳"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:textColor="#ffb402"
                            android:id="@+id/tv_money"
                            android:text="¥100"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>



                </LinearLayout>



                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/img_tu1"
                        android:src="@mipmap/img_xiaodingwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:id="@+id/tv_juli"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/img_tu1"
                        android:text="起点距您："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <Button
                        android:text="查看详情"
                        android:textColor="#ffffff"
                        android:id="@+id/btn_xiangqing"
                        android:background="@drawable/btn_chankanxiangqing_shape"
                        android:layout_alignParentRight="true"
                        android:layout_width="100dp"
                        android:layout_height="30dp" />

                </RelativeLayout>

            </LinearLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>
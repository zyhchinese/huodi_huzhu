<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eee">

    <View
        android:background="#eee"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        android:background="#ffffff"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linear"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_tu"
                        android:src="@mipmap/img_siji"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_dingdanhao"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/img_tu"
                        android:textColor="#000000"
                        android:text="订单号：123546K46KMK46"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_jiantou"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/img_jiantou1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>
                <View
                    android:layout_marginTop="10dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="联系人"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:id="@+id/view"
                        android:layout_marginRight="10dp"
                        android:layout_toLeftOf="@+id/img_call"
                        android:background="#eee"
                        android:layout_width="1dp"
                        android:layout_height="20dp"/>
                    <ImageView
                        android:id="@+id/img_call"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/img_dadianhua"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_toLeftOf="@+id/view"
                        android:layout_marginRight="10dp"
                        android:text="张三"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="用车类型"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_type"
                        android:text="小货车"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_alignBottom="@+id/tv_address"
                        android:id="@+id/img_dizhi_t"
                        android:src="@mipmap/img_dizhitubiao_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/img_dizhi_shu"
                        android:layout_marginLeft="6dp"
                        android:layout_below="@+id/img_dizhi_t"
                        android:src="@mipmap/img_dizhishugang"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp" />
                    <ImageView
                        android:layout_alignTop="@+id/tv_address1"
                        android:layout_below="@+id/img_dizhi_shu"
                        android:src="@mipmap/img_dizhitubiao_f"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_address"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/img_dizhi_t"
                        android:text="山东省济南市高新区汉峪金谷"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_address1"
                        android:layout_below="@+id/tv_address"
                        android:layout_alignLeft="@+id/tv_address"
                        android:layout_marginTop="20dp"
                        android:text="山东省济南市麦巴特新能源有限公司"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <View
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="酬劳"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_money"
                        android:text="¥100"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="订单生成时间"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_time"
                        android:text="2000/00/00"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="#eee"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="订单状态"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_status"
                        android:text="前往中"
                        android:textColor="#ffb305"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_status"
                android:visibility="gone"
                android:layout_alignBottom="@+id/linear"
                android:layout_alignParentRight="true"
                android:src="@mipmap/img_yiwancheng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>
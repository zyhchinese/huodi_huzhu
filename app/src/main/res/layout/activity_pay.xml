<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lx.hd.ui.activity.PileApplyActivity">

    <include layout="@layout/layout_base_common_title"></include>

    <ScrollView
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:textColor="@color/black_alpha_240"
                android:text="充值金额"/>
            <com.lx.hd.widgets.MyGridView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:horizontalSpacing="10dp"
                android:verticalSpacing="20dp"
                android:listSelector="@android:color/transparent"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:id="@+id/gv_sing_style">
            </com.lx.hd.widgets.MyGridView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_alpha_240"
                    android:text="其他金额"/>
                <EditText
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/bg_money_input"
                    android:id="@+id/et_money_input"
                    android:maxLength="6"
                    android:inputType="number"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="8dp"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_alpha_240"
                    android:text="元"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black_alpha_240"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="20dp"
                android:text="充值方式"/>
            <View
               style="@style/h_line"
                android:layout_margin="20dp"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ly_zfb"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_zfb"
                    android:src="@mipmap/icon_zfb"/>

                <TextView
                    android:id="@+id/zhifubao"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_zfb"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="支付宝支付"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/rb0"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:button="@null"
                    android:checked="true"
                    android:background="@drawable/selector_radio_pay"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_wx"
                    android:src="@mipmap/icon_wx"/>

                <TextView
                    android:id="@+id/tv_wx"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/img_wx"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:text="微信支付"
                    android:textColor="#000000" />

                <RadioButton
                    android:id="@+id/rb1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:button="@null"
                    android:checked="false"
                    android:background="@drawable/selector_radio_pay"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"/>
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#c72335"
        android:id="@+id/tv_pay_confirm"
        android:gravity="center"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:textColor="@color/white"
        android:text="确认支付"/>

</LinearLayout>

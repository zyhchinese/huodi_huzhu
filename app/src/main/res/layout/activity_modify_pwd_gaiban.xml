<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    android:orientation="vertical">

    <include layout="@layout/layout_base_common_title"></include>

    <ScrollView
        android:layout_weight="9"
        android:background="#f5f5f5"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_anquanzhongxin_banner"
                android:src="@mipmap/img_huodianquanzhongxinbanner"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/img_huodishoujihao_tubiao"/>
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:id="@+id/et_phone"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="#686565"
                        android:textSize="15sp"
                        android:textColor="#686565"
                        android:paddingLeft="10dp"
                        android:background="@null"
                        android:hint="请输入您的手机号"/>
                </LinearLayout>

                <!--<View-->
                    <!--style="@style/h_line"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginBottom="10dp"></View>-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/img_huodiyanzhengma_tubiao"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <EditText
                            android:paddingLeft="10dp"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:id="@+id/et_code"
                            android:background="@null"
                            android:layout_gravity="center_vertical"
                            android:textColorHint="#686565"
                            android:textSize="15sp"
                            android:layout_weight="1"
                            android:textColor="#686565"
                            android:hint="请输入证码"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:id="@+id/tv_get_code"
                            android:textColor="@color/white"
                            android:textSize="13sp"
                            android:background="#ff4e4e"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="点击获取验证码"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/img_huodixiugaimima_tubiao"/>
                    <EditText
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:id="@+id/et_new_pwd"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="#686565"
                        android:textSize="15sp"
                        android:textColor="#686565"
                        android:paddingRight="10dp"
                        android:background="@null"
                        android:hint="请设置密码"/>
                </LinearLayout>

                <!--<View-->
                    <!--style="@style/h_line"-->
                    <!--android:layout_marginTop="10dp"-->
                    <!--android:layout_marginBottom="10dp"></View>-->
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/img_huodixiugaimima_tubiao"/>
                    <EditText
                        android:paddingLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:id="@+id/et_check_pwd"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="#686565"
                        android:textSize="15sp"
                        android:textColor="#686565"
                        android:paddingRight="10dp"
                        android:background="@null"
                        android:hint="请再次确认新密码"/>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <TextView
        android:textSize="18sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ff4f4f"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="完成"
        android:id="@+id/tv_confirm"/>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="20dp"
            android:background="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="预约车型："
                android:id="@+id/tv_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_car"
                android:text="麦巴特"
                android:layout_toRightOf="@+id/tv_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_yuyue_name"
                android:text="预约姓名"
                android:layout_below="@+id/tv_car_type"
                android:layout_marginTop="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/ed_name"
                android:layout_toRightOf="@+id/tv_yuyue_name"
                android:src="@mipmap/xinghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_name"
                android:layout_marginTop="45dp"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/tv_yuyue_name"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_edittext_shape"
                android:hint="请填写您的姓名"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#b4b1b1"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_lianxi"
                android:text="联系方式"
                android:layout_below="@+id/tv_yuyue_name"
                android:layout_marginTop="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/ed_phone"
                android:layout_toRightOf="@+id/tv_lianxi"
                android:src="@mipmap/xinghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:inputType="number"
                android:id="@+id/ed_phone"
                android:layout_marginTop="12dp"
                android:layout_width="200dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@+id/tv_lianxi"
                android:layout_below="@+id/ed_name"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_edittext_shape"
                android:hint="请填写您的手机号码"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textColorHint="#b4b1b1"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:text="到店时间"
                android:layout_below="@+id/tv_lianxi"
                android:layout_marginTop="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/img3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_alignTop="@+id/btn_time"
                android:layout_toRightOf="@+id/tv_time"
                android:src="@mipmap/xinghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center"
                android:textColor="#b4b1b1"
                android:text="请选您的到店时间"
                android:layout_toRightOf="@+id/tv_time"
                android:layout_below="@+id/ed_phone"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/bg_spinner_shape"
                android:id="@+id/btn_time"
                android:layout_width="200dp"
                android:layout_height="35dp"/>

        </RelativeLayout>

        <Button
            android:id="@+id/btn_save"
            android:text="提交预约"
            android:textColor="#ffffff"
            android:background="#ecc901"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>









</RelativeLayout>
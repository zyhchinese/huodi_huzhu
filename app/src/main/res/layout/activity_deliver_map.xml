<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee"
    tools:context="com.lx.hd.ui.activity.PileApplyActivity">

    <include
        android:id="@+id/include"
        layout="@layout/layout_base_title_map"></include>


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/include"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp">

            <com.amap.api.maps.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"></com.amap.api.maps.MapView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@mipmap/map_qp"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/map_text"
                        android:layout_width="180dp"
                        android:layout_height="55dp"
                        android:layout_centerInParent="true"
                        android:ellipsize="end"
                        android:maxLines="3"
                        android:padding="5dp"
                        android:text="正在获取地址信息..."
                        android:textSize="12dp" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/td"
                    android:layout_width="20dp"
                    android:layout_height="35dp"
                    android:layout_marginBottom="20dp"
                    android:src="@mipmap/qd" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/linear_kuaiyun_addr"
            android:background="#ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_marginTop="30dp"
                android:visibility="gone"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:gravity="top|left"
                android:padding="5dp"
                android:background="@drawable/ed_bg_heibian"
                android:id="@+id/ed_content"
                android:hint="填写详细地址"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <RelativeLayout
                android:id="@+id/relative_xuanze_addr"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_huodiaddressf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    android:id="@+id/img_xuanze"
                    android:src="@mipmap/img_huodimorendizhif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_bianji"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/img_xuanze"
                    android:textColor="#000000"
                    android:text="存为常用发货起点"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:visibility="invisible"
                    android:id="@+id/img_ok"
                    android:layout_marginBottom="20dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/img_huodichangyong11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/huoyun_select"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_button_login_hei"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/select_sheng"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="15dp">


                <TextView
                    android:id="@+id/sheng_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="请选择"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ssx_jt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_shi"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/shi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="请选择"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ssx_jt" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/select_xian"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/xian_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:text="请选择"
                    android:textColor="#000000" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/ssx_jt" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="#c72335"
            android:gravity="center"
            android:padding="18dp"
            android:text="确定起点"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_main"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@id/include"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="8dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.lx.hd.widgets.myListView
                android:id="@+id/menu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:isScrollContainer="false"></com.lx.hd.widgets.myListView>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>

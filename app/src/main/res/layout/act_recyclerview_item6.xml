<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/bg_radiobutton_bg"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="10dp"
    android:orientation="vertical"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/img1"
        android:src="@mipmap/img_car7"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_car_name"
        android:text="麦巴特新能源汽车"
        android:layout_margin="10dp"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/view1"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        android:background="#fcc43e"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/img2"
            android:src="@mipmap/img_car1"
            android:layout_below="@+id/view1"
            android:layout_alignRight="@+id/img1"
            android:layout_gravity="center"
            android:layout_marginRight="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignBottom="@+id/img2"
            android:layout_toRightOf="@+id/img2"
            android:textSize="10sp"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:id="@+id/tv_renshu"
            android:text="车辆名称："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_shuliang"
            android:text="5"
            android:textSize="10sp"
            android:textColor="#fd7c89"
            android:layout_gravity="center"
            android:layout_alignBottom="@+id/tv_renshu"
            android:layout_toRightOf="@+id/tv_renshu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
    <ImageView
        android:src="@mipmap/img_car2"
        android:id="@+id/img3"
        android:layout_alignBottom="@+id/tv_ren"
        android:layout_toRightOf="@+id/tv_ren"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/chesu"
        android:text="车速："
        android:textSize="10sp"
        android:layout_alignBottom="@+id/img3"
        android:layout_toRightOf="@+id/img3"
        android:layout_marginLeft="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/sudu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/chesu"
            android:layout_toRightOf="@+id/chesu"
            android:text="180"
            android:textColor="#fd7c89"
            android:textSize="10sp" />

        <TextView
        android:id="@+id/danwei"
        android:text="公里/小时"
        android:textSize="10sp"
        android:layout_marginLeft="5dp"
        android:layout_alignBottom="@+id/sudu"
        android:layout_toRightOf="@+id/sudu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/img4"
        android:src="@mipmap/img_car3"
        android:layout_below="@+id/img2"
        android:layout_marginLeft="40dp"
        android:layout_alignRight="@+id/img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="10sp"
        android:id="@+id/xuhang"
        android:text="总电压："
        android:layout_alignBottom="@+id/img4"
        android:layout_toRightOf="@+id/img4"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/xuhang1"
        android:text="150"
        android:textSize="10sp"
        android:textColor="#fd7c89"
        android:layout_alignBottom="@+id/xuhang"
        android:layout_toRightOf="@+id/xuhang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/danwei1"
        android:text="V"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/xuhang1"
        android:layout_toRightOf="@+id/xuhang1"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/img6"
        android:src="@mipmap/img_car5"
        android:layout_alignBottom="@+id/danwei1"
        android:layout_alignRight="@+id/img3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_gonglv"
        android:text="总电流："
        android:textSize="10sp"
        android:layout_marginLeft="3dp"
        android:layout_alignBottom="@+id/img6"
        android:layout_toRightOf="@+id/img6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_gonglv1"
        android:text="120"
        android:textSize="10sp"
        android:textColor="#fd7c89"
        android:layout_alignBottom="@+id/tv_gonglv"
        android:layout_toRightOf="@+id/tv_gonglv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/danwei3"
        android:text="A"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/tv_gonglv1"
        android:layout_toRightOf="@+id/tv_gonglv1"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
    <ImageView
        android:id="@+id/img7"
        android:src="@mipmap/img_car6"
        android:layout_below="@+id/img4"
        android:layout_marginLeft="40dp"
        android:layout_alignRight="@+id/img4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_type"
        android:text="DC-DC温度："
        android:textSize="10sp"
        android:layout_alignBottom="@+id/img7"
        android:layout_toRightOf="@+id/img7"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_type1"
        android:text="0"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/tv_type"
        android:layout_toRightOf="@+id/tv_type"
        android:layout_width="wrap_content"
        android:textColor="#fd7c89"
        android:layout_height="wrap_content" />
    <TextView
        android:text="℃"
        android:textSize="10sp"
        android:layout_alignBottom="@+id/tv_type"
        android:layout_toRightOf="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>



</LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_below="@+id/img1"
        android:layout_marginTop="10dp"
        android:background="#EEE"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tv_beizhu1"
            android:text="删除"
            android:textColor="#a1a1a1"
            android:textSize="12sp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
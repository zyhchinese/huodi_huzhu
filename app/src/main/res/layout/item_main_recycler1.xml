<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/day_list_item_background"
    android:layout_marginLeft="0dp"
    android:padding="10dp"
    android:orientation="vertical">
    <View
        style="@style/h_line"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/view_lines"
        android:background="#eeeeee"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:id="@+id/lly_parern"
            android:orientation="horizontal">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_vertical"
                android:id="@+id/img_icon"
                android:src="@mipmap/icon_default" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="#333333"
                    android:id="@+id/tv_title"
                    android:text="三伏已去正是旅游好时节"/>
                <TextView

                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#555555"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/tv_conent"
                    android:textSize="13sp"
                    android:text="三伏已去，正是旅游好时节,三伏已去，正是旅游好时节"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_time"
            android:textSize="11sp"
            android:textColor="#aaaaaa"
            android:layout_marginRight="20dp"
            android:text="----"
            android:layout_below="@+id/lly_parern"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>

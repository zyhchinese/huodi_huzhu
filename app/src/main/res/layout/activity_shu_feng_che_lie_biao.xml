<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/layout_base_common_title"/>

    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/relative_chufadi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

            <TextView
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/ssx_jt"
                android:id="@+id/tv_chufadi"
                android:text="出发地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_mudidi"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="40dp">

            <TextView
                android:drawablePadding="10dp"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:drawableRight="@mipmap/ssx_jt"
                android:id="@+id/tv_mudidi"
                android:text="目的地"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/act_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>

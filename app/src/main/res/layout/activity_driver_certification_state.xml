<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee">

    <include layout="@layout/layout_base_common_title"></include>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                app:cardElevation="0dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">
                <LinearLayout
                    android:paddingTop="30dp"
                    android:paddingBottom="30dp"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_dingdanhao"
                            android:text="司机姓名"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:paddingRight="10dp"
                            android:textSize="14sp"
                            android:id="@+id/ed_name"
                            android:gravity="right|center_vertical"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/sijirenzheng_shape"
                            android:layout_width="200dp"
                            android:layout_height="30dp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_time"
                            android:text="身份证号"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:paddingRight="10dp"
                            android:textSize="14sp"
                            android:id="@+id/ed_chepaihao"
                            android:gravity="right|center_vertical"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/sijirenzheng_shape"
                            android:layout_width="200dp"
                            android:layout_height="30dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_name"
                            android:text="手机号"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:inputType="number"
                            android:paddingRight="10dp"
                            android:textSize="14sp"
                            android:id="@+id/ed_phone_number"
                            android:gravity="right|center_vertical"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/sijirenzheng_shape"
                            android:layout_width="200dp"
                            android:layout_height="30dp" />


                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_marginBottom="60dp"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:text="身份信息登记"
                        android:textColor="#232323"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_marginTop="10dp"
                        android:background="#eee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:text="身份证正面照"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:text="身份证反面照"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:text="手持身份证照"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/img1"
                                android:src="@mipmap/img_tianjiashili"
                                android:layout_width="84.5dp"
                                android:layout_height="84.5dp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/img2"
                                android:src="@mipmap/img_tianjiashili"
                                android:layout_width="84.5dp"
                                android:layout_height="84.5dp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/img3"
                                android:src="@mipmap/img_tianjiashili"
                                android:layout_width="84.5dp"
                                android:layout_height="84.5dp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/tv_shili1"
                                android:layout_marginRight="30dp"
                                android:textColor="#ffb403"
                                android:text="示例图片"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_shili1"
                                android:layout_alignLeft="@+id/tv_shili1"
                                android:layout_alignRight="@+id/tv_shili1"
                                android:background="#ffb403"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/tv_shili2"
                                android:layout_marginRight="30dp"
                                android:textColor="#ffb403"
                                android:text="示例图片"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_shili2"
                                android:layout_alignLeft="@+id/tv_shili2"
                                android:layout_alignRight="@+id/tv_shili2"
                                android:background="#ffb403"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/tv_shili3"
                                android:layout_marginRight="30dp"
                                android:textColor="#ffb403"
                                android:text="示例图片"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_shili3"
                                android:layout_alignLeft="@+id/tv_shili3"
                                android:layout_alignRight="@+id/tv_shili3"
                                android:background="#ffb403"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"/>

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:visibility="gone"
                android:layout_marginBottom="60dp"
                app:cardElevation="0dp"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:paddingTop="10dp"
                    android:paddingBottom="30dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_marginRight="10dp"
                        android:text="驾驶信息登记"
                        android:textColor="#232323"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <View
                        android:layout_marginTop="10dp"
                        android:background="#eee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        />

                    <LinearLayout
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="30dp"
                                android:text="驾驶证"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="30dp"
                                android:text="行驶证"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:layout_marginRight="30dp"
                                android:text="车辆照片"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/img4"
                                android:src="@mipmap/img_tianjiashili"
                                android:layout_width="84.5dp"
                                android:layout_height="84.5dp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/img5"
                                android:src="@mipmap/img_tianjiashili"
                                android:layout_width="84.5dp"
                                android:layout_height="84.5dp" />

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_centerHorizontal="true"
                                android:scaleType="centerCrop"
                                android:id="@+id/img6"
                                android:src="@mipmap/img_tianjiashili"
                                android:layout_width="84.5dp"
                                android:layout_height="84.5dp" />

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/tv_shili4"
                                android:layout_marginRight="30dp"
                                android:textColor="#ffb403"
                                android:text="示例图片"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_shili4"
                                android:layout_alignLeft="@+id/tv_shili4"
                                android:layout_alignRight="@+id/tv_shili4"
                                android:background="#ffb403"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/tv_shili5"
                                android:layout_marginRight="30dp"
                                android:textColor="#ffb403"
                                android:text="示例图片"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_shili5"
                                android:layout_alignLeft="@+id/tv_shili5"
                                android:layout_alignRight="@+id/tv_shili5"
                                android:background="#ffb403"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"/>

                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_centerHorizontal="true"
                                android:id="@+id/tv_shili6"
                                android:layout_marginRight="30dp"
                                android:textColor="#ffb403"
                                android:text="示例图片"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/tv_shili6"
                                android:layout_alignLeft="@+id/tv_shili6"
                                android:layout_alignRight="@+id/tv_shili6"
                                android:background="#ffb403"
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"/>

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>
            <Button
                android:id="@+id/btn_tijiao"
                android:layout_marginBottom="40dp"
                android:text="审核中"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:background="@drawable/btn_shape_bg_shenhezhong"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>
